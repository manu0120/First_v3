<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- "buttonreverse es transparente porque hereda de OutlinedButton que ya de por si es
      transparente. No hace falta poner backgroundTint entonces si heredas de OutlinedButton-->
    <style name="buttonreverse" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/purple_700</item>

        <item name="cornerRadius">4dp</item>
        <item name="strokeColor">@color/purple_700</item>
    </style>

    <style name="buttonreversesignup" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>

        <item name="android:textColor">@color/purple_700</item>

        <item name="cornerRadius">4dp</item>
        <item name="strokeColor">@color/purple_700</item>
    </style>

    <style name="buttonLoginBox" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
    </style>
</resources>